  "description": "Tool for calculating the cost of dishes",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "start:prod": "serve -s build",
    "test": "react-scripts test",
    "lint": "eslint **/*.{ts,tsx}",
    "lint:fix": "npm run lint -- --fix",
    "stylelint": "stylelint **/*.scss",
